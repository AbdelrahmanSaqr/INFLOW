<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradProject2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/littleBlue</item>
        <item name="colorPrimaryVariant">@color/blue_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/littleBlue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="bottomNavViewStyle" parent="Theme.Design.NoActionBar">
        <item name="android:background">@color/blue_black</item>

        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="fontFamily">@font/comicz</item>


    </style>
    <style name="iteminActive" parent="">
        <item name="itemIconTint">@color/green</item>
        <item name="itemTextColor">#FF0000</item>



    </style>




    <style name="whiteText">
        <item name="android:fontFamily">@font/arial</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>


    <style name="blacktext">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="headingText">
        <item name="fontFamily">@font/bevietnamprobold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/blue_black</item>
    </style>

    <style name="edit_Text_meetingDetails">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/arial</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
    </style>




</resources>